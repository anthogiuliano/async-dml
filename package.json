{
    "name": "salesforce-app",
    "private": true,
    "version": "1.0.0",
    "description": "Salesforce App",
    "scripts": {
        "lint:staged": "lint-staged",
        "lint:unstaged:eslint": "git diff --name-only --diff-filter d | grep -E '^(aura|lwc).*\\.(js|ts)$' | xargs eslint || true",
        "lint:unstaged:prettier": "git diff --name-only --diff-filter d -z | xargs -0 prettier --write --ignore-unknown || true",
        "lint:unstaged": "npm run lint:unstaged:prettier && npm run lint:unstaged:eslint",
        "lint": "eslint **/lwc/**/*.js",
        "precommit": "npm run lint:staged",
        "prepare": "husky",
        "prettier:verify": "prettier --check \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
        "prettier": "prettier --write \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\""
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.34.0",
        "@jsforce/jsforce-node": "^3.10.4",
        "@prettier/plugin-xml": "^3.4.2",
        "@salesforce/core": "^8.22.0",
        "@salesforce/eslint-config-lwc": "^4.0.0",
        "@salesforce/eslint-plugin-aura": "^3.0.0",
        "@salesforce/eslint-plugin-lightning": "^2.0.0",
        "@salesforce/kit": "^3.2.3",
        "@salesforce/sf-plugins-core": "^12.2.4",
        "@salesforce/sfdx-lwc-jest": "^7.1.0",
        "@salesforce/source-deploy-retrieve": "^12.22.9",
        "@salesforce/ts-types": "^2.0.12",
        "@segment/public-api-sdk-typescript": "^59.0.0-b12810",
        "@tsconfig/recommended": "^1.0.10",
        "@types/glob": "^9.0.0",
        "@types/jsforce": "^1.11.5",
        "@types/node": "^24.3.0",
        "@types/xml2js": "^0.4.14",
        "dotenv": "^17.2.1",
        "eslint": "^9.34.0",
        "eslint-plugin-compat": "^6.0.2",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-jest": "^29.0.1",
        "globals": "^16.3.0",
        "husky": "^9.1.7",
        "jsforce": "^3.10.4",
        "jszip": "^3.10.1",
        "lint-staged": "^16.1.5",
        "load-json-file": "^7.0.1",
        "prettier": "^3.6.2",
        "prettier-plugin-apex": "^2.2.6",
        "simple-git": "^3.28.0",
        "ts-node": "^10.9.2",
        "tslib": "^2.8.1",
        "typescript": "^5.9.2",
        "xml2js": "^0.6.2"
    },
    "lint-staged": {
        "**/*.{cls,cmp,component,css,html,js,ts,json,md,page,trigger,xml,yaml,yml}": [
            "prettier --write"
        ],
        "**/{aura,lwc}/**/*.{js,ts}": [
            "eslint"
        ]
    }
}
